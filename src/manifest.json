{
	"applications": {
		"gecko": {
			"id": "app-menu@exe-boss",
			"strict_min_version": "55.0"
		}
	},

	"manifest_version":	2,
	"name":	"__MSG_extensionName__",
	"version":	"0.1.6",
	"author":	"ExE Boss",
	"description":	"__MSG_description__",
	"default_locale":	"en",

	"permissions": [
		"activeTab",
		"clipboardRead",
		"clipboardWrite",
		"contextualIdentities",
		"cookies",
		"downloads",
		"storage"
	],
	"icons": {
		"16":	"themes/pastel-svg/firefox@16px.png",
		"24":	"themes/pastel-svg/firefox@24px.png",
		"32":	"themes/pastel-svg/firefox@32px.png",
		"48":	"themes/pastel-svg/firefox@48px.png",
		"64":	"themes/pastel-svg/firefox@64px.png",
		"72":	"themes/pastel-svg/firefox@72px.png",
		"96":	"themes/pastel-svg/firefox@96px.png",
		"128":	"themes/pastel-svg/firefox@128px.png",
		"256":	"themes/pastel-svg/firefox.png"
	},

	"background": {
		"scripts": [ "shared.js", "background.js" ]
	},
	"options_ui": {
		"browser_style":	true,
		"page":	"options/options.xhtml"
	},
	"browser_action": {
		"browser_style":	true,
		"default_title":	"__MSG_browserAction__",
		"default_popup":	"popup/popup.xhtml",
		"default_area":	"tabstrip",
		"default_icon":	"themes/australis/firefox.svg"
	}
}
